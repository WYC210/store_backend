<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyc21.mapper.ProductMapper">
    
    <resultMap id="ProductMap" type="com.wyc21.entity.Product">
        <id property="productId" column="product_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="categoryId" column="category_id"/>
        <result property="sku" column="sku"/>
        <result property="brand" column="brand"/>
        <result property="tags" column="tags"/>
        <result property="rating" column="rating"/>
        <result property="reviewCount" column="review_count"/>
        <result property="lowStockThreshold" column="low_stock_threshold"/>
        <result property="isActive" column="is_active"/>
        <result property="imageUrl" column="image_url"/>
        <result property="createdUser" column="created_user"/>
        <result property="createdTime" column="created_time"/>
        <result property="modifiedTime" column="modified_time"/>
        <collection property="reviews" 
                    ofType="com.wyc21.entity.ProductReview"
                    javaType="java.util.ArrayList">
            <id property="productId" column="product_id"/>
            <result property="name" column="name"/>
            <result property="price" column="price"/>
            <result property="description" column="description"/>
            <result property="rating" column="rating"/>
            <result property="reviewCount" column="review_count"/>
            <result property="createdTime" column="created_time"/>
        </collection>
    </resultMap>

    <resultMap id="ProductDetailMap" type="com.wyc21.entity.Product">
        <id property="productId" column="product_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="categoryId" column="category_id"/>
        <result property="brand" column="brand"/>
        <result property="tags" column="tags"/>
        <result property="imageUrl" column="image_url"/>
        <result property="rating" column="rating"/>
        <result property="reviewCount" column="review_count"/>
        <result property="isActive" column="is_active"/>
        <result property="createdTime" column="created_time"/>
        <result property="modifiedTime" column="modified_time"/>
    </resultMap>

    <resultMap id="ProductEntityMap" type="com.wyc21.entity.Product">
        <id property="productId" column="product_id" javaType="java.lang.String"/>
        <result property="categoryId" column="category_id" javaType="java.lang.String"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="sku" column="sku"/>
        <result property="brand" column="brand"/>
        <result property="tags" column="tags"/>
        <result property="rating" column="rating"/>
        <result property="reviewCount" column="review_count"/>
        <result property="lowStockThreshold" column="low_stock_threshold"/>
        <result property="isActive" column="is_active"/>
        <result property="imageUrl" column="image_url"/>
        <result property="createdUser" column="created_user"/>
        <result property="createdTime" column="created_time"/>
        <result property="modifiedTime" column="modified_time"/>
    </resultMap>

    <select id="findProducts" resultType="com.wyc21.entity.Product">
        SELECT p.*
        FROM wz_products p
        WHERE p.is_active = 1
        <if test="categoryId != null">
            AND p.category_id = #{categoryId}
        </if>
        <if test="keyword != null and keyword != ''">
            AND (
                p.name LIKE CONCAT('%', #{keyword}, '%')
                OR p.description LIKE CONCAT('%', #{keyword}, '%')
                OR p.brand LIKE CONCAT('%', #{keyword}, '%')
                OR p.tags LIKE CONCAT('%', #{keyword}, '%')
                OR p.image_url LIKE CONCAT('%', #{imageUrl}, '%')
        </if>
        ORDER BY p.created_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countProducts" resultType="long">
        SELECT COUNT(*)
        FROM wz_products p
        WHERE p.is_active = 1
        <if test="categoryId != null">
            AND p.category_id = #{categoryId}
        </if>
        <if test="keyword != null and keyword != ''">
            AND (
                p.name LIKE CONCAT('%', #{keyword}, '%')
                OR p.description LIKE CONCAT('%', #{keyword}, '%')
                OR p.brand LIKE CONCAT('%', #{keyword}, '%')
                OR p.tags LIKE CONCAT('%', #{keyword}, '%')
                OR p.image_url LIKE CONCAT('%', #{imageUrl}, '%')
        </if>
    </select>

    <select id="findById" resultMap="ProductEntityMap">
        SELECT * FROM wz_products 
        WHERE product_id = #{productId}
    </select>

    <select id="findReviewsByProductId" resultType="com.wyc21.entity.ProductReview">
        SELECT 
            product_id,
            name,
            rating,
            review_count,
            description,
            created_time
        FROM wz_products 
        WHERE product_id = #{productId}
        LIMIT #{limit}
    </select>

    <insert id="insert" parameterType="com.wyc21.entity.Product">
        INSERT INTO wz_products (
            product_id, name, description, price, 
            stock, category_id, brand, image_url,
            rating, review_count, is_active,
            created_user, created_time, modified_time
        ) VALUES (
            #{productId}, #{name}, #{description}, #{price},
            #{stock}, #{categoryId}, #{brand}, #{imageUrl},
            #{rating}, #{reviewCount}, #{isActive},
            #{createdUser}, #{createdTime}, #{modifiedTime}
        )
    </insert>
    
    <update id="update" parameterType="com.wyc21.entity.Product">
        UPDATE wz_products
        SET name = #{name},
            description = #{description},
            price = #{price},
            stock = #{stock},
            category_id = #{categoryId},
            brand = #{brand},
            image_url = #{imageUrl},
            modified_time = NOW()
        WHERE product_id = #{productId}
    </update>
    
    <update id="updateStock">
        UPDATE wz_products
        SET stock = #{stock},
            modified_time = NOW()
        WHERE product_id = #{productId}
    </update>

    <select id="findAll" resultMap="ProductMap">
        SELECT p.*
        FROM wz_products p
        WHERE p.is_active = 1
        ORDER BY p.created_time DESC
    </select>

    <update id="decreaseStock">
        UPDATE wz_products 
        SET stock = stock - #{quantity},
             modified_time = NOW()
        WHERE product_id = #{productId}
        AND stock >= #{quantity}
    </update>

    <update id="increaseStock">
        UPDATE wz_products 
        SET stock = stock + #{quantity},
             modified_time = NOW()
        WHERE product_id = #{productId}
    </update>

    <select id="findByIdForUpdate" resultMap="ProductMap">
        SELECT * FROM wz_products 
        WHERE product_id = #{productId} 
        FOR UPDATE
    </select>

    <select id="findProductImages" resultType="string">
        SELECT image_url
        FROM wz_product_images
        WHERE product_id = #{productId}
        ORDER BY is_primary DESC
    </select>
</mapper> 