<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyc21.mapper.CategoryMapper">
    
    <resultMap id="CategoryMap" type="com.wyc21.entity.Category">
        <id property="categoryId" column="category_id"/>
        <result property="name" column="name"/>
        <result property="parentCategoryId" column="parent_id"/>
        <collection property="children" ofType="com.wyc21.entity.Category" 
                    column="category_id" select="findChildCategories"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.wyc21.entity.Category">
        INSERT INTO wz_categories (
            category_id, name, parent_id,
            created_time, modified_time
        ) VALUES (
            #{categoryId}, #{name}, #{parentCategoryId},
            NOW(), NOW()
        )
    </insert>
    
    <select id="findById" resultMap="CategoryMap">
        SELECT * FROM wz_categories WHERE category_id = #{categoryId}
    </select>
    
    <select id="findAll" resultMap="CategoryMap">
        SELECT * FROM wz_categories ORDER BY created_time DESC
    </select>
    
    <select id="findRootCategories" resultMap="CategoryMap">
        SELECT * FROM wz_categories 
        WHERE parent_id IS NULL 
        ORDER BY created_time DESC
    </select>
    
    <select id="findChildCategories" resultMap="CategoryMap">
        SELECT * FROM wz_categories 
        WHERE parent_id = #{parentId}
        ORDER BY created_time DESC
    </select>
    
    <update id="update" parameterType="com.wyc21.entity.Category">
        UPDATE wz_categories
        SET name = #{name},
            parent_id = #{parentCategoryId},
            modified_time = NOW()
        WHERE category_id = #{categoryId}
    </update>
    
    <delete id="delete">
        DELETE FROM wz_categories WHERE category_id = #{categoryId}
    </delete>
</mapper> 